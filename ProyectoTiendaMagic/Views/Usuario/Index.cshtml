@model ProyectoTiendaMagic.Models.Usuario

@{
    ViewData["Title"] = "Index";
}

<h2 style="align-self:center">Creacion Usuario</h2>
<hr />
<div class="row" id="outPopUp">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input class="form-control" placeholder="Nombre"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Contraseña"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Confirmar Contraseña"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Correo Electronico"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registro" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Exit</a>
            </div>
        </form>
    </div>
</div>
<style>
    #outPopUp {
        display: flex;
        justify-content: center;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
